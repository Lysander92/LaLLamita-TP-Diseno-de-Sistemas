{% extends 'layout/baseLayout.html.twig' %}

{% block header %}


    <!-- Bootstrap Select Css -->
    <link href="{{ asset('plugins/bootstrap-select/css/bootstrap-select.css') }}" rel="stylesheet" />

    <!-- Izimodal Css -->
    <link href="{{ asset('css/iziModal.min.css') }}" rel="stylesheet" type="text/css">

    <!-- Notify Css -->
    <link href="{{ asset('css/notify.css') }}" rel="stylesheet" type="text/css">

    <style>
        .alert-black{
            background-color: black;
        }
    </style>

    <script>
        function sacar() {

            $('#inp1').removeClass('focused');
            $('#inp2').removeClass('focused');
        }
    </script>
{% endblock %}

{% block menu %}
{% include 'MesaDeAyuda/menu/CU01menu01.html.twig' %}
{% endblock %}

{% block content %}
<section class="content">
    <div class="container-fluid">
        <div class="block-header">
            <h2>REGISTRAR TICKETS</h2>
        </div>





        <!-- Horizontal Layout -->
        <div class="row clearfix">
            <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
                <div class="card">
                    <div class="header">
                        <h2>
                            REGISTRAR TICKETS
                        </h2>
                        <ul class="header-dropdown m-r--5">
                            <li class="dropdown">
                                <a href="javascript:void(0);" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-haspopup="true" aria-expanded="false">
                                    <i class="material-icons">more_vert</i>
                                </a>
                                <ul class="dropdown-menu pull-right">
                                    <li><a href="javascript:void(0);">Action</a></li>
                                    <li><a href="javascript:void(0);">Another action</a></li>
                                    <li><a href="javascript:void(0);">Something else here</a></li>
                                </ul>
                            </li>
                        </ul>
                    </div>
                    <div class="body">
                        <form id="formulario" method="post" action="{{ path('CU01ProcesarTicket') }}">
                            <!-- FECHA Y HORA DE REGISTRO -->
                            <div class="row clearfix">
                                <div class="col-sm-6">
                                    <div class="form-group form-float">
                                        <div id="inp1" class="form-line" >
                                            <label class="form-label" style=" top: -10px; font-size: 12px;">Fecha de registro</label>
                                            <input type="date" class="form-control" name="fecha" readonly value="{{ fecha }}" disabled>

                                        </div>
                                    </div>
                                </div>
                                <div class="col-sm-6">
                                    <div class="form-group form-float">
                                        <div id="inp2" class="form-line" >
                                            <label class="form-label" style=" top: -10px; font-size: 12px;">Hora de registro</label>
                                            <input type="time" class="form-control" name="hora" readonly value="{{ hora }}" disabled>

                                        </div>
                                    </div>
                                </div>

                            </div>

                            <div class="row clearfix">
                                <div class="col-sm-6">
                                    <div class="form-group form-float">
                                        {% if error.has('ticket') %}

                                            <div class="form-line focused error">
                                                <input type="number" name="idTicket" class="form-control" value="{{ requestflash.get(0) }}">
                                                <label class="form-label">Número de Ticket</label>
                                            </div>
                                            <label class="error">{{ error.get('ticket') }}</label>

                                        {% else %}
                                            <div class="form-line">
                                                <input type="text" class="form-control" name="idTicket"  value="{{ requestflash.get(0) }}">
                                                <label class="form-label">Número de Ticket</label>
                                            </div>
                                            <div class="help-info">Número sugerido</div>
                                        {% endif %}
                                    </div>
                                </div>
                                <div class="col-sm-6">
                                    <div class="form-group form-float">
                                        {% if error.has('legajo') %}

                                                <div class="form-line focused error">
                                                    <input type="number" class="form-control" name="legajo" value="{{ requestflash.get(1) }}">
                                                    <label class="form-label">Número de Legajo</label>
                                                </div>
                                                <label class="error">{{ error.get('legajo') }}</label>

                                        {% else %}
                                        <div class="form-line">
                                            <input type="number" name="legajo" class="form-control" {% if error.evaluate() %}  {{ requestflash.get(1) }} {% endif %}>
                                            <label class="form-label">Número de Legajo</label>
                                        </div>
                                        <div class="help-info">Legajo del Empleado que hizo el reclamo</div>
                                        {% endif %}
                                    </div>
                                </div>

                            </div>

                            <div class="row clearfix">
                                <div class="col-sm-12">

                                            <select class="form-control show-tick" id="clasificacion_ticket" name="clasificacion">
                                                {% for clas in clasificaciones %}
                                                <option value="{{ clas.id }}">{{ clas.nombre }}</option>
                                                {% endfor %}
                                            </select>


                                </div>


                            </div>

                            <div class="row clearfix">
                                <div class="col-sm-12">
                                    <div class="form-group form-float">
                                        {% if error.has('descripcion') %}

                                            <div class="form-line focused error">
                                                <textarea  id="descripcion_ticket" name="descripcion" cols="30" rows="5" class="form-control no-resize" required>{{ requestflash.get(2) }}</textarea>

                                                <label class="form-label">Descripción del problema</label>
                                            </div>
                                            <label class="error">{{ error.get('descripcion') }}</label>

                                        {% else %}
                                            <div class="form-line">
                                                <textarea  id="descripcion_ticket" name="descripcion" cols="30" rows="5" class="form-control no-resize" required>{% if error.evaluate() %}  {{ requestflash.get(2) }} {% endif %}</textarea>

                                                <label class="form-label">Descripción del problema</label>
                                            </div>
                                            <div class="help-info">Min. 3, Max. 255 caracteres</div>
                                        {% endif %}

                                    </div>
                                </div>


                            </div>
                            <!-- BOTONES-->
                            <div class="row clearfix">

                                <div class="col-sm-12">
                                <div class="button-demo">



                                        <button id="cancel" type="button" class="btn bg-grey m-t-15 waves-effect open-options" >CANCELAR</button>
                                        <button id="submm" type="button" class="btn bg-cyan m-t-15 waves-effect open-options" >REGISTRAR</button>

                                    </div>
                                </div>
                            </div>

                        </form>
                    </div>







                    </div>
                </div>
            </div>

        <!-- #END# Horizontal Layout -->






 <!-- CON OPCIONES-->
                            <div id="modal-options" class="iziModal" data-izimodal-group="group1" data-izimodal-loop="" data-izimodal-title="¿ESTA SEGURO DE CREAR EL TICKET?" data-izimodal-subtitle="crear si ha completado todos los campos">

                                <!-- Basic Card -->
                                <div class="row clearfix">

                                    <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">


                                        <div class="body align-right" style="padding: 20px">

                                            <div class="button-demo">
                                                <button type="button" class="btn bg-grey waves-effect" onclick="cerrarIzimodal()">CANCELAR</button>
                                                <button type="button" class="btn bg-red waves-effect" onclick="submit()">ACEPTAR</button>
                                            </div>
                                        </div>
                                    </div>

                                </div>
                            </div>
                                <!-- #END# Basic Card -->





    </div>
</section>


{% endblock %}

{% block footer %}


<!-- Bootstrap Notify Plugin Js -->
<script src="{{ asset('plugins/bootstrap-notify/bootstrap-notify.js') }}"></script>


<!-- Select Plugin Js -->
<script src="{{ asset('plugins/bootstrap-select/js/bootstrap-select.js') }}"></script>

<!-- Slimscroll Plugin Js -->
<script src="{{ asset('plugins/jquery-slimscroll/jquery.slimscroll.js') }}"></script>

<!-- Jquery Validation Plugin Css -->
<script src="{{ asset('plugins/jquery-validation/jquery.validate.js') }}"></script>


<script src="{{ asset('js/pages/forms/form-validation.js') }}"></script>

<!-- Izimodal -->
<script src="{{ asset('plugins/izimodal/iziModal.min.js') }}"></script>


<!-- Bootstrap Notify Plugin Js -->
<script src="{{ asset('plugins/bootstrap-notify/bootstrap-notify.js') }}"></script>
<script src="{{ asset('js/notify.js') }}"></script>



<script>
   function submit() {


            document.getElementById('formulario').submit();
        }


    </script>

    <script>
        //options
        $(document).on('click', '.open-options', function(event) {
            event.preventDefault();
            var textA = document.getElementById('descripcion_ticket');
            if(textA.value == "") {

                infoNotify('El campo descripción del problema esta vacío');
            }
            else {

                $('#modal-options').iziModal({
                    headerColor: '#F44336',
                    width: '50%', //横幅
                    overlayColor: 'rgba(0, 0, 0, 0.5)', //モーダルの背景色
                    fullscreen: true, //全画面表示
                    transitionIn: 'fadeInUp', //表示される時のアニメーション
                    transitionOut: 'fadeOutDown' //非表示になる時のアニメーション
                });
                $('#modal-options').iziModal('open');

            }
        });

        function cerrarIzimodal(){
            $('#modal-options').iziModal('close');
        }

    </script>
{% endblock %}